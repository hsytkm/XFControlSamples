                BindableProperty
                    プロパティの変更の検出
                    検証コールバック
                    強制値のコールバック
                    Func を使用して既定値を作成する

            https://docs.microsoft.com/ja-jp/xamarin/xamarin-forms/xaml/attached-properties
                添付プロパティ

            https://docs.microsoft.com/ja-jp/xamarin/xamarin-forms/xaml/field-modifiers
                x:FieldModifier="internal"

            https://docs.microsoft.com/ja-jp/xamarin/xamarin-forms/xaml/runtime-load
                実行時の Xamarin 形式での XAML の読み込み
    -->

    <!-- https://docs.microsoft.com/ja-jp/xamarin/xamarin-forms/user-interface/controls/views -->
    <TabbedPage.Children>
        <NavigationPage Title="Markup" >
            <x:Arguments>
                <local:MarkupPage />
            </x:Arguments>
        </NavigationPage>

        <!-- BindingSourcePage -->
        <NavigationPage Title="Source" >
            <x:Arguments>
                <local:BindingSourcePage />
            </x:Arguments>
        </NavigationPage>

        <!-- ValueConverter -->
        <NavigationPage Title="ValConv" >
            <x:Arguments>
                <local:ValueConverterPage />
            </x:Arguments>
        </NavigationPage>

        <!-- BindableProperty -->

        <!-- AttachedProperty -->

        <!-- MarkupExtension -->
        <NavigationPage Title="MarkupEx" >
            <x:Arguments>
                <local:MarkupExtensionPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="MultiConv" >
            <x:Arguments>
                <!-- https://github.com/hsytkm/XFMultiValueConverter -->
                <local:BlankPage Title="MultiValueConverter"
                                 Message="https://github.com/xxx/XFMultiValueConverter"/>
            </x:Arguments>
        </NavigationPage>

    </TabbedPage.Children>

</TabbedPage>
